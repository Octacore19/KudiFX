<resources>
    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@android:color/darker_gray</item>
        <item name="suffixTextColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="materialThemeOverlay">@style/AppTheme.Button.ThemeOverlay</item>
    </style>

    <style name="AppTheme.Button.ThemeOverlay">
        <item name="colorPrimary">@color/color_green</item>
        <item name="colorOnPrimary">@color/color_white</item>
    </style>

    <style name="AppTheme.OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_green</item>
    </style>

    <style name="AppTheme.TextButton.Group.Single" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_grey1</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/AppTheme.CardView.ThemeOverlay</item>
    </style>

    <style name="AppTheme.CardView.ThemeOverlay">
        <item name="colorSurface">@color/color_blue3</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceMediumComponent.CardView</item>
    </style>

</resources>